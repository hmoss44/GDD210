float dist = 0;
float  t = 0;
float moveSpd = 10;

using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class FPSController2 : MonoBehaviour
{
void Update()
{
    t +=   1 * Time.deltaTime;
    if(t > delayTime)
    { 
        sign = -sign;
        t= 0;
        dist = Random.Range(5,7);
    }

    transform.position += (Vector3.right * (moveSpd * sign) * dist) * Time.deltaTime;
}
}